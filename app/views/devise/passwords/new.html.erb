<div class="max-w-md mx-auto py-10 px-6">
  <h2 class="text-4xl font-bold mb-4">Forgot your password?</h2>

  <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
    <%= render "devise/shared/error_messages", resource: resource %>

    <div class="form-field">
      <%= f.label :email %><br />
      <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "text-field" %>
    </div>

    <div class="actions form-field">
      <%= f.submit "Send me reset password instructions", class: 'btn btn-blue' %>
    </div>
  <% end %>

  <%= render "devise/shared/links" %>
</div>
